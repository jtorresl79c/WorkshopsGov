@model WorkshopsGov.Models.VehicleModel

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item">
            <a asp-action="Index">Modelos</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Agregar nuevo modelo</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- 🔹 Campo Hidden para CreatedAt -->
                    <input type="hidden" asp-for="CreatedAt" value="@DateTime.UtcNow" />
                    <input type="hidden" asp-for="UpdatedAt" value="@DateTime.UtcNow" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Nombre del modelo</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BrandId" class="control-label">Marca</label>
                        <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId">
                            <option value="">Seleccione una marca...</option>
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Active" /> Activo
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
