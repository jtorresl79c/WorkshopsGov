@model IEnumerable<WorkshopsGov.Models.RequestService>

@{
    ViewData["Title"] = "Solicitudes por Atender - Taller";
}


<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="header-title">
            <h4 class="card-title">Por atender</h4>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive mt-4">
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Folio</th>
                        <th>Departamento</th>
                        <th>Vehículo</th>
                        <th>Fecha de Recepción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Folio</td>
                            <td>@item.Department?.Name</td>
                            <td>@item.Vehicle?.Description</td>
                            <td>@item.ReceptionDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                                    Detalles
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>