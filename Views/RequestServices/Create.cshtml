@model WorkshopsGov.Models.RequestService

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item">
            <a asp-action="Index">Solicitud de Servicio</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Agregar nueva solicitud</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Folio" class="control-label"></label>
                        <input asp-for="Folio" class="form-control" />
                        <span asp-validation-for="Folio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleId" class="control-label">Vehiculo</label>
                        <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="DepartmentId" class="control-label">Departamento</label>
                        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Descripción</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReceptionDate" class="control-label">Fecha de Recepción</label>
                        <input asp-for="ReceptionDate" class="form-control" type="date"/>
                        <span asp-validation-for="ReceptionDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Generar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
