@model WorkshopsGov.Models.Vehicle

@{
    Layout = null;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-5 fw-bold">Oficialia:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.Oficialia)</div>

                <div class="col-md-5 fw-bold">Placa:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.LicensePlate)</div>

                <div class="col-md-5 fw-bold">Número de VIN:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.VinNumber)</div>

                <div class="col-md-5 fw-bold">Descripción:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.Description)</div>

                <div class="col-md-5 fw-bold">Departamento:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.Department.Name)</div>

                <div class="col-md-5 fw-bold">Estado del Vehículo:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.VehicleStatus.Name)</div>

                <div class="col-md-5 fw-bold">Año:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.Year)</div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-5 fw-bold">Marca:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.Brand.Name)</div>

                <div class="col-md-5 fw-bold">Modelo:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.Model.Name)</div>

                <div class="col-md-5 fw-bold">Motor:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.Engine)</div>

                <div class="col-md-5 fw-bold">Sector:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.Sector.Name)</div>

                <div class="col-md-5 fw-bold">Tipo de Vehículo:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.VehicleType.Name)</div>

                <div class="col-md-5 fw-bold">Activo:</div>
                <div class="col-md-7">@(Model.Active ? "Sí" : "No")</div>

                <div class="col-md-5 fw-bold">Última Actualización:</div>
                <div class="col-md-7">@Html.DisplayFor(model => model.UpdatedAt)</div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
    </div>
</div>
