@model WorkshopsGov.Models.DTOs.ApplicationUserDto

@{
    ViewData["Title"] = "Detalles de usuario";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center p-4">
        <div class="header-title">
            <h4 class="card-title m-0 p-0">Detalles</h4>
        </div>
    </div>
</div>

<div class="container-fluid mt-4">
    <div class="bg-white p-4">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.SecondName)
            </dt>
            <dd class="col-sm-9">
                @(string.IsNullOrEmpty(Model.SecondName) ? "No registrado" : Model.SecondName)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.PaternalLastName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PaternalLastName)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.MaternalLastName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MaternalLastName)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Department)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Department)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Active)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Active)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
        </dl>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</div>
