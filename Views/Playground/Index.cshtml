@* En tu vista Razor específica, por ejemplo Views/Dashboard/Index.cshtml *@
@{
    ViewData["Title"] = "Playground";
}

<div class="container">
    <h1>Playground Index</h1>
    
    @* Aquí incluyes el div donde se montará tu componente Vue *@
    <div id="playground-app"></div>
</div>

@section Scripts {
    <environment include="Development">
        @* Carga la aplicación Vue desde el servidor de desarrollo de Vite *@
        <script type="module" src="http://localhost:5173/src/pages/playground/index.js"></script>
    </environment>
    <environment exclude="Development">
        @* Carga la aplicación Vue compilada para producción *@
        <script type="module" src="~/vue-apps/assets/playground/playground.js"></script>
        <link rel="stylesheet" href="~/vue-apps/assets/playground/playground.css">
    </environment>
}